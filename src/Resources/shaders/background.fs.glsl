#version 410 core
//------------------------------------------------------------------------------------------
// fragment shader, background shading
//------------------------------------------------------------------------------------------

//------------------------------------------------------------------------------------------
// uniforms
uniform samplerCube envTex;
//------------------------------------------------------------------------------------------
// in variables
in vec3 f_viewDir;
//----------------------------------------------------------`--------------------------------
// out variables
out vec4 fragColor;

//------------------------------------------------------------------------------------------
void main()
{
    vec3 viewDir = normalize(f_viewDir);
    /////////////////////////////////////////////////////////////////
    // output
    fragColor = texture(envTex, viewDir);

}
